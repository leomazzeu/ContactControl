@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>

<form>
  <div class="mb-3">
    <label for="name" class="form-label">Nome</label>
    <input type="text" class="form-control" placeholder="Insira o nome do contato">
  </div>

  <div class="mb-3">
    <label for="email" class="form-label">E-mail</label>
    <input type="email" class="form-control" placeholder="Insira o e-mail do contato">
  </div>

  <div class="mb-3">
    <label for="phone" class="form-label">Celular</label>
    <input type="text" class="form-control" placeholder="Insira o número do contato">
  </div>

  <button type="submit" class="btn btn-primary btn-block">Alterar</button>
  <a class="btn btn-secondary btn-block" asp-controller="Contact" asp-action="Index" role="button">Voltar</a>
</form>